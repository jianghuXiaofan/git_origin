#include "link.h"
#include "struct.h"

#include <stdlib.h>
#include <stdio.h>

void insert_student_node(struct stu_node * head)
{
	struct stu_node * temp = NULL;
	struct stu_node * p = NULL;
	

	p = malloc(sizeof(struct student));
	scanf("%d",&p->stu.ID);
	printf("请输入姓名:");
	scanf("%s",p->stu.name);
	while(getchar() != '\n');
	printf("请输入英语成绩:");
	scanf("%f",&p->stu.mark.english);
	while(getchar() != '\n');

	p->next = NULL;
	temp ->next = p;
}

